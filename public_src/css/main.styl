html, body
  margin 0
  padding 0
  font-family 'Oxygen', Helvetica, Arial, sans-serif

body
  display flex
  flex-direction column

nav
  position fixed
  width 100%
  padding 0 2vw
  top 0
  background darkslategrey
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap
  color white
  z-index 1
  box-sizing border-box

nav ul
  padding 0
  list-style none
  display flex
  flex-direction row

.nav-item
  margin-right 1em

.nav-item a
  text-decoration none
  color white

.nav-item a.active
  font-weight bolder

.selectors
  display flex
  flex-direction row
  align-items center

.navbar-form .form-control
  margin-left 1em

main
  margin-top 2em
  padding 2em 2vw
  display flex
  flex-direction column

main > div
  margin-bottom 1em
  width 100%
  display flex
  flex-direction column
  align-items center

#chart-container
  position relative

#chart-title
  text-align center

#chart-detail
  width 100%

#chart-detail > table
  width 100%
  border-spacing 0

#chart-detail > table > tr
  display flex
  justify-content space-around

#chart-detail th, #chart-detail td
  text-align center
  padding 0.5em

#chart-detail thead
  background darkslategrey
  color white

#chart-detail tr:nth-child(even)
  background lightgrey

#chart-container
  position relative
  min-height 500px

#map
  width 100%
  height 70vh
  min-height 500px

.chart-loading
  opacity 0.5

.loading::before
  content url('../img/spin.svg')
  z-index 1
  position absolute
  width 100%
  height 100%
  left: 0
  top: 0
  display flex
  justify-content center
  align-items center
  opacity 0.9

#prev-month, #next-month
  position absolute
  width 4em
  height 6vh
  min-height 50px
  z-index 1
  top 32vh
  border none
  background-color lightslategrey
  opacity 0.5
  color white

#prev-month
  left 0

#prev-month:before
  content '<'

#next-month
  right 0
#next-month:before
  content '>'

footer
  position fixed
  bottom 0
  width 100%
  padding 0.5em
  display flex
  justify-content space-around
  flex-wrap wrap
  background-color lightgrey
  box-sizing border-box

.footer-text
  margin 0.5em
  font-size 0.6em

footer a
  text-decoration none

.terms
  position fixed
  top 0
  z-index 1
  background white
  margin 20vh 5vw 0
  padding 5vw
  display flex
  flex-direction column
  align-items center
  border 2px solid darkslategrey

.terms p
  align-self flex-start

.terms.hidden
  display none
