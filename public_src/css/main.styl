html, body
  height 100%
  margin 0
  padding 0
  font-family Helvetica, sans-serif

.content
  margin 50px

.input
  display flex
  flex-direction row
  justify-content center
  align-items center

#plot-form
  margin-left 20px

#plot-container
  display flex
  flex-direction column
  justify-content center

#plot-space
  display flex
  justify-content center

#transactions-container, #transactions-list
  display flex
  flex-direction column
  justify-content center

#map
  height 500px
