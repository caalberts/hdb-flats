html, body
  margin 0
  padding 0
  font-family Helvetica, sans-serif

body
  display flex
  flex-direction column

nav
  position fixed
  width 100%
  padding 0 2vw
  top 0
  background darkslategrey
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap
  color white
  z-index 1
  box-sizing border-box

nav ul
  padding 0
  list-style none
  display flex
  flex-direction row

.nav-item
  margin-right 1em

.nav-item a
  text-decoration none
  color white

.nav-item a.active
  font-weight bold

.selectors
  display flex
  flex-direction row
  align-items center

.navbar-form .form-control
  margin-left 1em

main
  margin-top 2em
  padding 2em 2vw
  display flex
  flex-direction column

main > div
  margin-bottom 1em
  width 100%
  display flex
  flex-direction column
  align-items center

#chart-title
  text-align center

#chart-detail
  width 100%

#chart-detail > table
  width 100%
  border-spacing 0

#chart-detail > table > tr
  display flex
  justify-content space-around

#chart-detail th, #chart-detail td
  text-align center
  padding 0.5em

#chart-detail thead
  background darkslategrey
  color white

#chart-detail tr:nth-child(even)
  background lightgrey

#map
  width 100%
  height 500px

.loading::before
  content url('../img/spin.svg')
  z-index 1
  position absolute
  width 100%
  left 0
  top 50%
  display flex
  justify-content center
  opacity 0.9

.chart-loading
  opacity 0.5

#prev-month
  width 50px
  height 50px
  background-color red

#next-month
  width 50px
  height 50px
  background-color blue

footer
  position fixed
  bottom 0
  width 100%
  padding 0.5em
  display flex
  justify-content center
  background-color lightgrey
  box-sizing border-box

.footer-text
  margin 0
  font-size small
