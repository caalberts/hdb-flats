html, body
  // height 100%
  margin 0
  padding 0
  font-family Helvetica, sans-serif

// .content
//   margin 20px
body
  display flex
  flex-direction column

nav
  padding 0 2vw
  top 0
  background cyan
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap

nav ul
  padding 0
  list-style none
  display flex
  flex-direction row

nav ul li
  margin-right 1em

nav ul li a
  text-decoration none

nav ul li a.active
  font-weight bold

.selectors
  display flex
  flex-direction row
  align-items center

.navbar-form .form-control
  margin-left 1em

main
  padding 2em 2vw
  display flex
  flex-direction column

main > div
  margin-bottom 1em
  width 100%
  display flex
  flex-direction column
  align-items center

#chart-detail
  width 100%

#chart-detail > table
  width 100%
  border-spacing 0

#chart-detail > table > tr
  display flex
  justify-content space-around

#chart-detail th, #chart-detail td
  text-align center
  padding 0.5em

#chart-detail thead
  background cyan

#chart-detail tr:nth-child(even)
  background lightcyan

